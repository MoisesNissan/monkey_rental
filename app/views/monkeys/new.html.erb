<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Add a new monkey</h3>
        <%= simple_form_for @monkey do |f| %>
          <%= f.input :name, class:"add-monkey-input"%>
          <%= f.input :species, class:"add-monkey-input"%>
          <%= f.input :age, class:"add-monkey-input"%>
          <%= f.input :weight, label:"Weight (kg)", class:"add-monkey-input"%>
          <%= f.input :address, as: :string, class:"add-monkey-input"%>
          <%= f.input :price, label: "Price ($)", class:"add-monkey-input" %>
          <%= f.input :photo, as: :file %>
          <%= f.submit class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
