<div class="cover mb-4 d-flex align-items-center justify-content-center">
  <div class="text-center text-white">
    <h1>List of monkeys</h1>
    <h3 class="typed-js"></h3>
  </div>
</div>
<div class="container py-5">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h3 class="mb-0">My monkey rentals</h3>
    <%= link_to 'Add a monkey', new_monkey_path, class: 'btn btn-flat' %>
  </div>
<div class="cards">
  <% @monkeys.each do |monkey| %>
    <% if monkey.photo.attached? %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path monkey.photo.key %>)">
        </div>
    <% else %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1540573133985-87b6da6d54a9?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1355&q=80)">
        <%= monkey.name %>
        <%= monkey.price %>
        </div>
    <% end %>
  <% end %>
